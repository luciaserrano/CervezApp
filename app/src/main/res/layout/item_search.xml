<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_ctrlBeer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="#333">

    <ImageView
        android:id="@+id/search_imgbeer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toStartOf="@+id/tvSearchItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvSearchItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="234dp"
        android:fontFamily="@font/bowlby_one_sc"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/search_imgbeer"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sABV"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/bowlby_one_sc"
        android:text="ABV:"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toStartOf="@+id/sABV1"
        app:layout_constraintStart_toEndOf="@+id/search_imgbeer"
        app:layout_constraintTop_toBottomOf="@+id/tvSearchItem" />

    <TextView
        android:id="@+id/sABV1"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/bowlby_one_sc"
        android:text="text"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toStartOf="@+id/sIBU"
        app:layout_constraintStart_toEndOf="@+id/sABV"
        app:layout_constraintTop_toBottomOf="@+id/tvSearchItem" />

    <TextView
        android:id="@+id/sIBU"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/bowlby_one_sc"
        android:text="IBU:"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toStartOf="@+id/sIBU1"
        app:layout_constraintStart_toEndOf="@+id/sABV1"
        app:layout_constraintTop_toBottomOf="@+id/tvSearchItem" />

    <TextView
        android:id="@+id/sIBU1"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="113dp"
        android:fontFamily="@font/bowlby_one_sc"
        android:text="Text"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sIBU"
        app:layout_constraintTop_toBottomOf="@+id/tvSearchItem" />

    <View
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="7dp"
        android:background="@color/purple_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_imgbeer" />

</androidx.constraintlayout.widget.ConstraintLayout>